<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Rhyme">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@color/colorMenuBar"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BackButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="ClickedBackButton"
                android:padding="0dp"
                android:text="&lt;"
                android:textColor="#666"
                android:textSize="30sp"
                android:typeface="serif" />

            <Button
                android:id="@+id/emailButtonInactive"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text=""
                android:textColor="#666"
                android:textSize="30sp"
                android:typeface="serif" />

            <Button
                android:id="@+id/emailButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/imprima"
                android:gravity="center"
                android:padding="0dp"
                android:text="Email"
                android:textColor="#666"
                android:textSize="30sp"
                android:typeface="serif" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/totalIllustration"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/illustration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/RhymeUpButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/up_arrow"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="bottom"
                ></ImageButton>
        </FrameLayout>

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="89dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/HelpButton"
            android:layout_toEndOf="@+id/BackButton"
            android:background="@null"
            android:onClick="onPlayAudio"
            app:srcCompat="@drawable/ic_play" />

        <RelativeLayout
            android:id="@+id/ScrollingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ScrollView
            android:id="@+id/RhymeScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/RhymeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF">
            </LinearLayout>
        </ScrollView>
        <ImageButton
            android:id="@+id/RhymeDownButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/down_arrow"
            android:layout_alignParentBottom="true"
            style="?android:attr/borderlessButtonStyle"
            />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>